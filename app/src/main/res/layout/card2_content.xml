<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/ruby_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ruby_title"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ruby_image"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            app:srcCompat="@drawable/ruby_stone" />

        <TextView
            android:id="@+id/ruby_price_label"
            android:layout_width="@dimen/price_label_width"
            android:layout_height="wrap_content"
            android:text="@string/ruby_price"
            android:textSize="@dimen/price_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_ruby_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"
                android:onClick="addItemAll"/>

            <Button
                android:id="@+id/remove_ruby_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:onClick="removeItemAll"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amount_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount_cart" />

            <TextView
                android:id="@+id/ruby_amount_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/amount_size"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ruby_description" />

</LinearLayout>